# Конфигурация базы данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=secure_service

# Секретный ключ для JWT (ОБЯЗАТЕЛЬНО измените на свой!)
# Должен быть минимум 32 символа для безопасности
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure-and-random-123456789

# Порт сервера
SERVER_PORT=8080

# Настройки для разработки (опционально)
# LOG_LEVEL=debug
# ENVIRONMENT=development

# Настройки планировщика постов
SCHEDULER_ENABLED=true
POST_TICKER_DURATION=30s       # Интервал проверки (10s, 30s, 1m)
POST_WORKERS_COUNT=5           # Количество воркеров (1-20)
POST_BATCH_SIZE=50             # Максимум постов за раз (10-100)